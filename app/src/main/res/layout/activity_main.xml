<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/cleancache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:text="Clean App Cache" />

            <Button
                android:id="@+id/cleancachewithmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cleancache"
                android:layout_centerHorizontal="true"
                android:layout_margin="0dp"
                android:text="Clean App Cache with Toast" />

            <Button
                android:id="@+id/cleanappdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cleancachewithmessage"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:text="Clean App Data" />

            <Button
                android:id="@+id/cleanappdatawithmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cleanappdata"
                android:layout_centerHorizontal="true"
                android:layout_margin="0dp"
                android:text="Clean App Data with Toast" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>